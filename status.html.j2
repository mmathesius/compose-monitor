<html>
  <head>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8"/>
    <title>Status of {{ results["name"] }}-{{ results["version"] }} composes from {{ results["url"] }}</title>
    <style>
      h1, p {
        font-family: arial, sans-serif;
      }

      table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
      }

      td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
      }

      tr:nth-child(even) {
        background-color: #dddddd;
      }
    </style>
  </head>
  <body>
    <h1>Status of {{ results["name"] }}-{{ results["version"] }} composes from {{ results["url"] }}</h1>
    <p>Status updated: {{ results["now"] }}</p>
    <table>
      <thead>
        <tr>
          <th>What</th>
          <th>ID</th>
          <th>Date</th>
          <th>Age (days)</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th>Last attempted compose</th>
          <th>
            <a href="{{ results["latest_attempted"]["compose_url"] }}">
              {{ results["latest_attempted"]["compose"] }}
            </a>
          </th>
          <th>{{ results["latest_attempted"]["date"] }}</th>
          <th>{{ results["latest_attempted"]["age"] }}</th>
        </tr>
        <tr>
          <th>Last finished compose</th>
          <th>
            <a href="{{ results["latest_finished"]["compose_url"] }}">
              {{ results["latest_finished"]["compose"] }}
            </a>
          </th>
          <th>{{ results["latest_finished"]["date"] }}</th>
          <th>{{ results["latest_finished"]["age"] }}</th>
        </tr>
        <tr>
          <th>Last incomplete compose</th>
          <th>
            <a href="{{ results["latest_incomplete"]["compose_url"] }}">
              {{ results["latest_incomplete"]["compose"] }}
            </a>
          </th>
          <th>{{ results["latest_incomplete"]["date"] }}</th>
          <th>{{ results["latest_incomplete"]["age"] }}</th>
        </tr>
      </tbody>
    </table>
  </body>
</html>
